<%= javascript_include_tag :application %>

<script>
<% if @conversation.persisted? %>
  window.people = <%= raw(@conversation.people.map(&:name)) %>;
<% end %>
</script>

<%= yield :javascript %>


<% if Rails.env.test? %>
  <%= javascript_tag do %>
    $.fx.off = true;
    $.ajaxSetup({ async: false });
  <% end %>
<% end %>
